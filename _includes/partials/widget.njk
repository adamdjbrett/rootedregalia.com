{% if show_product %}
        <section class="related-articles my-5 container">
            <h3 class="section-title">{{metadata.widget.group_products}}</h3>
            <div class="row">{% for post in collections.groupproducts | reverse | limit(3) %}
                <div class="col-md-4">
                    <div class="card mb-3">
                        {% if post.data.image %}<a href="{{post.url}}"><img src="{{post.data.image}}" class="card-img-top" alt="{{post.data.title}}"></a>{% endif %}
                        <div class="card-body">
                            <h5 class="card-title"><a href="{{post.url}}">{{post.data.title}}</a></h5>
                            <p class="card-text" style="font-size:0.95rem;">{{post.data.description}}</p>
                            <a href="{{post.url}}" class="btn btn-card btn-sm text-white">{{metadata.widget.button.product}}</a>
                        </div>
                    </div>
                </div>{% endfor %}
            </div>
        </section>
        <section class="related-articles my-5 container">
            <h3 class="section-title">{{metadata.widget.individual_products}}</h3>
