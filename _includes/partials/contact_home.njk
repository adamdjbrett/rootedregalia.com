    <section class="container py-5" id="contact">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="section-title text-start">{{metadata.contact.info}}</h2>
                <p class="mb-4">{{metadata.contact.text}}</p>
                
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-light p-3 rounded-circle me-3">
                        <i class="fas fa-map-marker-alt text-success"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">{{metadata.contact.location.title}}</h5>
                        <p class="mb-0">{% for s in metadata.contact.location.info %}{{ s.text }}{% if not loop.last %}<br/> {% endif %}{% endfor %}</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-light p-3 rounded-circle me-3">
                        <i class="fas fa-phone text-success"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">{{metadata.contact.phone.title}}</h5>
                        <p class="mb-0">{% for s in metadata.contact.phone.info %}<a href="{{s.url}}">{{ s.text }}</a>{% if not loop.last %}<br/>{% endif %}{% endfor %}</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-center">
                    <div class="bg-light p-3 rounded-circle me-3">
                        <i class="fas fa-envelope text-success"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">{{metadata.contact.email.title}}</h5>
                        <p class="mb-0">{% for e in metadata.contact.email.info %}<a href="{{e.url}}">{{ e.text }}</a>{% if not loop.last %}<br/>{% endif %}{% endfor %}</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 mt-5 mt-lg-0">
                <div class="contact-form">
                    <form action="{{metadata.contact.form.formspree}}" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Your Name" name="name" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control" placeholder="Your Email" name="email" required>
                            </div>
                        </div>
                        <input type="text" class="form-control" placeholder="Subject"  name="subject">
                        <textarea class="form-control" rows="5" placeholder="Your Message"  name="message" required></textarea>
                        <div class="text-center">
                            <button type="submit" class="btn btn-contact">{{metadata.contact.form.button}}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
