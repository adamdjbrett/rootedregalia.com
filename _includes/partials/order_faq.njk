<section class="py-5" style="background-color: #f8f9fa;">
  <div class="container text-center">
    <h2 class="section-title mb-3">{{faq.title}}</h2>
    <div class="accordion accordion-flush mx-auto" style="max-width:650px;" id="faqBulkOrder">
      {% for t in faq.info %}
      {% set thisFaqId = "faq" + loop.index %}
      <div class="accordion-item">
        <h3 class="accordion-header" id="heading-{{thisFaqId}}">
          <button class="accordion-button collapsed"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#{{thisFaqId}}"
                  aria-expanded="false"
                  aria-controls="{{thisFaqId}}">
            {{t.q}}
          </button>
        </h3>
        <div id="{{thisFaqId}}"
             class="accordion-collapse collapse"
             aria-labelledby="heading-{{thisFaqId}}"
             data-bs-parent="#faqBulkOrder">
          <div class="accordion-body">
            {{t.a}}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    <div class="mt-5">
      <a href="{{button.home.url}}" class="btn btn-order me-3"><i class="{{button.home.icon}}"></i> {{button.home.title}}</a>
      <a href="{{button.gallery.url}}" class="btn btn-bulk"><i class="{{button.gallery.icon}}"></i> {{button.gallery.title}}</a>
    </div>
  </div>
</section>
