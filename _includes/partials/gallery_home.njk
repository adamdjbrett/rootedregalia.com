<section class="py-5" style="background-color: #f8f9fa;" id="gallery">
 
  <div class="container">
    <h2 class="section-title">Our Gallery</h2>
    <div class="row g-3">
      {% for i in collections.galleries | reverse | limit(1) %}
      <div class="col-md-12">
        <div class="gallery-item">
          <a href="{{gallery.button.url}}">
            <img src="{{gallery.image or metadata.image}}" alt="{{i.data.title}}" class="gallery-img">
          </a>
          <h3 class="mt-5 text-center">
            {{gallery.intro}}<br/><a href="{{gallery.button.url}}" class="btn btn-order mt-3">{{gallery.button.text}}</a>
          </h3>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

